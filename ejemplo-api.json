                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Token JWT obtenido del endpoint /usuarios/login"
            }
        },
        "schemas": {
            "Producto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
