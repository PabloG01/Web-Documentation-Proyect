                        "example": "Smartphone Galaxy X20"
                    },
                    "descripcion": {
                        "type": "string",
                        "example": "Smartphone de 칰ltima generaci칩n con pantalla AMOLED de 6.5 pulgadas"
                    },
                    "precio": {
                        "type": "number",
                        "format": "double",
                        "example": 599.99
                    },
                    "precio_oferta": {
                        "type": "number",
                        "format": "double",
                        "nullable": true,
                        "example": 499.99
                    },
                    "stock": {
                        "type": "integer",
                        "example": 50
                    },
                    "categoria_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "categoria_nombre": {
                        "type": "string",
                        "example": "Electr칩nica"
                    },
                    "imagen_url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://ejemplo.com/imagenes/smartphone-x20.jpg"
                    },
                    "destacado": {
                        "type": "boolean",
                        "example": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-15T10:30:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-20T14:45:00Z"
                    }
                }
            },
            "ProductoInput": {
                "type": "object",
                "required": [
                    "nombre",
                    "precio",
                    "categoria_id"
                ],
                "properties": {
                    "nombre": {
                        "type": "string",
                        "maxLength": 150,
                        "example": "Auriculares Bluetooth Pro"
                    },
                    "descripcion": {
                        "type": "string",
                        "maxLength": 2000,
                        "example": "Auriculares inal치mbricos con cancelaci칩n de ruido activa"
                    },
                    "precio": {
                        "type": "number",
                        "format": "double",
                        "minimum": 0.01,
                        "example": 149.99
                    },
                    "precio_oferta": {
                        "type": "number",
                        "format": "double",
                        "nullable": true,
                        "example": 129.99
                    },
                    "stock": {
                        "type": "integer",
                        "minimum": 0,
                        "default": 0,
                        "example": 100
                    },
                    "categoria_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "imagen_url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://ejemplo.com/imagenes/auriculares.jpg"
                    },
                    "destacado": {
                        "type": "boolean",
                        "default": false
                    }
                }
            },
            "ListaProductos": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Producto"
                        }
                    },
                    "pagination": {
                        "$ref": "#/components/schemas/Paginacion"
                    }
                }
            },
            "Usuario": {
                "type": "object",
